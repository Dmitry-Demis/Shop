<Window x:Class="Shop.Views.Windows.CreateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop.Views.Windows"
        mc:Ignorable="d"
        DataContext="{Binding CreateProductViewModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" Width="300"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <!-- Определение сетки с двумя столбцами и несколькими строками -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название продукта -->
        <TextBlock Text="Название продукта:" VerticalAlignment="Center" Margin="10" Grid.Row="0" Grid.Column="0"/>
        <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" Margin="10" Grid.Row="0" Grid.Column="1"/>
        <!-- Кнопка создания продукта -->
        <Button Content="Создать продукт" Command="{Binding CreateProductCommand}" Margin="10" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
